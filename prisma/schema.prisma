generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  owners    Owner[]
  users     User[]
  stamps    Stamp[]
  scanTokens ScanToken[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Owner {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  name       String
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([businessId])
}

model User {
  id          String   @id @default(cuid())
  name        String
  phone       String
  stamps      Int      @default(0)
  totalCuts   Int      @default(0)
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  stampHistory Stamp[]
  scanTokens   ScanToken[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([phone, businessId])
  @@index([businessId])
}

model Stamp {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  type       String   // "PAID" | "FREE"
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([businessId])
}

model ScanToken {
  id         String   @id @default(cuid())
  token      String   @unique
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())

  @@index([userId, createdAt])
  @@index([businessId, createdAt])
  @@index([expiresAt])
}
